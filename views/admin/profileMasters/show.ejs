<div class="app-content content">
  <div class="content-overlay"></div>
  <div class="header-navbar-shadow"></div>
  <div class="content-wrapper container-xxl p-0">
    <div class="content-header row"></div>
    <div class="content-body">

      <div class="col-xl-12 col-lg-12">
        <div class="card">
          <div class="card-header">
            <h4 class="card-title"><%= user.name %> Details 
              <a href="/admin/users/edit/<%= user._id %>">
                <i data-feather="edit" class="me-50"></i>
              </a></h4>
          </div>
          <div class="card-body">

            <ul class="nav nav-tabs nav-justified" id="myTab2" role="tablist">
              <li class="nav-item">
                <a class="nav-link active" id="profile-tab-justified" data-bs-toggle="tab" href="#profile-just" role="tab" aria-controls="profile-just" aria-selected="true">
                  Profile
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="bookings-tab-justified" data-bs-toggle="tab" href="#bookings-just" role="tab" aria-controls="bookings-just" aria-selected="false">
                  Bookings
                </a>
              </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content pt-1">

              <!-- Profile Tab -->
              <div class="tab-pane active" id="profile-just" role="tabpanel" aria-labelledby="profile-tab-justified">
                <div class="row">
                  <div class="col-md-4 text-center">

                    <img src="<%= user.profile_url %>" class="img-fluid rounded mb-2" style="max-width: 150px;">

                  </div>
                  <div class="col-md-8">
                    <table class="table table-striped">
                      <tr>
                        <th>Name</th>
                        <td><%= user.name %></td>
                      </tr>
                      <tr>
                        <th>Email</th>
                        <td><%= user.email || 'N/A' %></td>
                      </tr>
                      <tr>
                        <th>Mobile</th>
                        <td><%= user.mobile %></td>
                      </tr>
                      <tr>
                        <th>Gender</th>
                        <td><%= user.gender || 'N/A' %></td>
                      </tr>
                      <tr>
                        <th>DOB</th>
                        <td><%= user.dob ? user.dob.toDateString() : 'N/A' %></td>
                      </tr>
                      <tr>
                        <th>User Type</th>
                        <td><%= user.user_type %></td>
                      </tr>
                      <tr>
                        <th>OTP Verified</th>
                        <td>
                          <% if (user.otp_verify) { %>
                          <span class="badge bg-success">Verified</span>
                          <% } else { %>
                          <span class="badge bg-danger">Not Verified</span>
                          <% } %>
                        </td>
                      </tr>
                      <tr>
                        <th>Terms Accepted</th>
                        <td>
                          <% if (user.terms_conditions) { %>
                          <span class="badge bg-success">Accepted</span>
                          <% } else { %>
                          <span class="badge bg-warning">Not Accepted</span>
                          <% } %>
                        </td>
                      </tr>
                      <tr>
                        <th>Address</th>
                        <td><%= user.homeAddress || 'N/A' %></td>
                      </tr>
                      <tr>
                        <th>Emergency Contact</th>
                        <td><%= user.emergencyContact || 'N/A' %></td>
                      </tr>
                      <tr>
                        <th>SSN</th>
                        <td><%= user.ssn || 'N/A' %></td>
                      </tr>
                    </table>
                  </div>
                </div>
              </div>

              <!-- Bookings Tab -->
              <div class="tab-pane" id="bookings-just" role="tabpanel" aria-labelledby="bookings-tab-justified">
                <% if (bookings.length === 0) { %>
                <p>No bookings found.</p>
                <% } else { %>
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Booking ID</th>
                      <th>Date</th>
                      <th>Status</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% bookings.forEach((b, i) => { %>
                    <tr>
                      <td><%= i+1 %></td>
                      <td><%= b._id %></td>
                      <td><%= b.date.toDateString() %></td>
                      <td><%= b.status %></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
                <% } %>
              </div>

            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>